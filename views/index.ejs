<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>ProjetoColab</title>
</head>
<body>
    <form action="/create" method="post">
      <input type="text" name="task" id="task" placeholder="Insira uma tarefa">
      <button id="addButton" type="submit">Adicionar</button>
    </form>

    <ul>
      <% tasksList.forEach((task) => { %>
        <li>
          <%= task.task %>
          <% if (task.date) { %>
            <% const dateObject = new Date(task.date); %>
            <%= dateObject.toLocaleDateString('pt-BR') %>
          <% } else { %>
            Data n√£o definida
          <% } %>
        </li>
      <% }) %>
    </ul>    
    
    <script src="script.js"></script>
</body>
</html>
